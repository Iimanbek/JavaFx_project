<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import org.example.demo.RegistrationController?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="10"
      style="-fx-background-color: linear-gradient(to bottom,#90EE90 , #004040);"
      fx:controller="org.example.demo.RegistrationController"
      fx:id="vbox">

    <ImageView fitHeight="450.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@images/image13.jpg" />
        </image>
    </ImageView>

    <HBox alignment="CENTER" spacing="10">
        <!-- Кнопка "Войти" -->
        <Button fx:id="loginButton" text="Войти" onAction="#handleLogin">
            <style>
                -fx-background-color:  #004040; /* Зеленый */
                -fx-text-fill: white; /* Белый текст */
                -fx-font-size: 14px;
                -fx-pref-width: 100px; /* Ширина кнопки */
                -fx-pref-height: 40px; /* Высота кнопки */
            </style>
        </Button>

        <!-- Кнопка "Зарегистрироваться" -->
        <Button fx:id="registerButton" text="Зарегистрироваться" onAction="#handleRegister">
            <style>
                -fx-background-color: #FFFFFF;
                -fx-text-fill:  #004040; /* Белый текст */
                -fx-font-size: 14px;
                -fx-pref-width: 150px; /* Ширина кнопки */
                -fx-pref-height: 40px; /* Высота кнопки */
            </style>
        </Button>
    </HBox>

    <Label fx:id="errorMessageLabel" />

    <Label text="Зарегистрируйтесь для прохождения игры ! " style="-fx-font-size: 20px; -fx-text-fill: white;"/>

</VBox>
