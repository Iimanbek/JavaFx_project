<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" alignment="CENTER" prefHeight="680.0" prefWidth="800.0" spacing="10" style="-fx-background-color: linear-gradient(to right, #90EE90, #87CEFA);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.RegistrationController">

    <ImageView fitHeight="344.0" fitWidth="596.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@images/image22.jpg" />
        </image>
    </ImageView>

    <HBox alignment="CENTER" spacing="10">
        <!-- Кнопка "Войти" -->
        <Button fx:id="loginButton" onAction="#handleLogin" text="Authorization">
            <style>
                -fx-background-color: #004040; /* Зеленый */
                -fx-text-fill: white; /* Белый текст */-fx-font-size: 18px; -fx-pref-width: 150px; /* Ширина кнопки */-fx-pref-height: 45px; -fx-background-color: #228B22; -fx-text-fill: white;</style>
        </Button>

        <!-- Кнопка "Зарегистрироваться" -->
        <Button fx:id="registerButton" onAction="#handleRegister" text="Registration">
            <style>
                -fx-background-color: #FFFFFF;
                -fx-text-fill:  #004040; /* Белый текст */
                -fx-font-size: 18px;
                -fx-pref-width: 150px; /* Ширина кнопки */-fx-pref-height: 45px; -fx-text-fill: black;</style>
        </Button>
    </HBox>

    <Label fx:id="errorMessageLabel" />

    <Label style="-fx-font-size: 20px; -fx-text-fill: BLACK;" text="Register or login to play the game! " />

</VBox>
